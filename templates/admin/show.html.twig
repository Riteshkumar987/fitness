{% extends 'adminbase.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
<div class="container mt-3">
    <h1 class="mb-4">User Details</h1>

    <div class="card">
        <div class="card-header">
            <h3>{{ user.name }}</h3>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> {{ user.id }}</p>
            <p><strong>Name:</strong> {{ user.name }}</p>
            <p><strong>Email:</strong> {{ user.email }}</p>
            <p><strong>Roles:</strong> {{ user.roles|join(', ') }}</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="{{ path('admin_user_edit', { id: user.id }) }}" class="btn btn-warning">Edit User</a>
        <a href="{{ path('dashboard') }}" class="btn btn-secondary">Back to List</a>

        <form method="post" action="{{ path('admin_user_delete', { id: user.id }) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
            <button type="submit" class="btn btn-danger">Delete User</button>
        </form>
    </div>
</div>
{% endblock %}
